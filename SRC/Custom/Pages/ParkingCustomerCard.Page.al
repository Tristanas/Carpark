                    trigger OnValidate()
                    begin
                        StyleTxt := SetStyle;
                    end;
                }
                field(TotalSales2; GetTotalSales)
                {
                    ApplicationArea = Basic, Suite;
                    Caption = 'Total Sales';
                    Style = Strong;
                    StyleExpr = TRUE;
